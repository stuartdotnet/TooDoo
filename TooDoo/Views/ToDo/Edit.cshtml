@model TooDoo.Models.EditToDoViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2><i class="fa fa-edit"></i> Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    @Html.HiddenFor(t => t.ToDoItem.TodoItemId)
    @Html.HiddenFor(t => t.ToDoItem.Completed)
    @Html.HiddenFor(t => t.WasDone)
    
  <div class="form-group">
            @Html.LabelFor(model => model.ToDoItem.Title, new { @class = "control-label col-md-2 form-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.ToDoItem.Title, new { @class = "text-box" })
                @Html.ValidationMessageFor(model => model.ToDoItem.Title)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ToDoItem.Details, new { @class = "control-label col-md-2 form-label" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.ToDoItem.Details)
                @Html.ValidationMessageFor(model => model.ToDoItem.Details)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ToDoItem.DueDate, new { @class = "control-label col-md-2 form-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ToDoItem.DueDate)
                @Html.ValidationMessageFor(model => model.ToDoItem.DueDate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ToDoItem.IsDone, new { @class = "control-label col-md-2 form-label" })
            <div class="col-md-10">
                <div class="check-box-div">                    
                    @Html.CheckBoxFor(model => model.ToDoItem.IsDone, new { @class = "large-check" })
                </div>
                @Html.ValidationMessageFor(model => model.ToDoItem.IsDone)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-lg btn-primary" />
            </div>
        </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
