@model TooDoo.Model.ToDoItem

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2><i class="fa fa-plus"></i> Create</h2>

<div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Title, new { @class = "control-label col-md-2 form-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Title, new { @class = "text-box", id = "title", placeholder = "Enter title of task" })
                @Html.ValidationMessageFor(model => model.Title)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Details, new { @class = "control-label col-md-2 form-label" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Details)
                @Html.ValidationMessageFor(model => model.Details)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DueDate, new { @class = "control-label col-md-2 form-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.DueDate, new { @class = "date-input text-box", id = "dueDate",  placeholder = "Click to select date" })
                @Html.ValidationMessageFor(model => model.DueDate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsDone, new { @class = "control-label col-md-2 form-label" })
            <div class="col-md-10">
                <div class="check-box-div">                    
                    @Html.CheckBoxFor(model => model.IsDone, new { @class = "large-check" })
                </div>
                @Html.ValidationMessageFor(model => model.IsDone)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-lg btn-primary" />
            </div>
        </div>

    }
</div>
<div>
    @Html.ActionLink("Back to List", "Index", null, new { @class="btn btn-default" })
</div>

@section Scripts {
@Scripts.Render("~/bundles/jqueryval")
}
